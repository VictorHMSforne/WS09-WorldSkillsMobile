<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WS.Views.PageCadastrar" Title="Cadastrar Paciente">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Nome:" />
            <Entry x:Name="txtNome" Placeholder="Digite o Nome do Paciente"/>
            <Label Text="Selecione um Exame:" />
            <Picker x:Name="pckExame" SelectedIndexChanged="pckExame_SelectedIndexChanged">
            </Picker>
            <Label Text="Selecione o Dia para Realizar o Exame:" />
            <DatePicker x:Name="DpckRealizar" Format="dd/MM/yyyy"/>
            <Label Text="O Exame ficará pronto em:" />
            <DatePicker x:Name="DpckExaPronto" Format="dd/MM/yyyy"/>
            <Button x:Name="btnCadastrar" Text="Cadastrar" BackgroundColor="LightGreen" CornerRadius="20" Clicked="btnCadastrar_Clicked"/> 
        </StackLayout>
    </ContentPage.Content>
</ContentPage>